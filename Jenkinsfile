      pipeline {    
        agent any
        stages {
            stage('Build') {
                steps {
                    withEnv(['PATH+EXTRA=/usr/sbin:/usr/bin:/sbin:/bin']){
                        sh 'Build not yet...'
                    
                    }
                }
            }

            stage('Test') {
